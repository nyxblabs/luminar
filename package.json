    "lint": "eslint --ext .ts,.js .",
    "lint:fix": "eslint --ext .ts,.js . --fix",
    "release": "nyxr test && nyxlx changelogen --release && pnpm publish && git push --follow-tags",
    "test": "nyxr lint && vitest run --coverage"
